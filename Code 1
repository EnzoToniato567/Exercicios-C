//biblioteca

#include <stdio.h>
#include <locale.h>


int main() {
    setlocale(LC_ALL, ""); 

    int num; 
    
    printf ("Insira um número:\n"); //Inserir um número inteiro
    scanf ("%d", &num);
    
    if (num % 2 == 0) { //Resto da divisão tem que ser 0
        printf ("O número é par\n"); //If else se é par ou impar
    }
    
    else {
        printf ("O número é impar\n");
    }
    
}